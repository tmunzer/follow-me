doctype html5
html
    head
        title= title
        meta(name="viewport" content="width=device-width, initial-scale=1")

        script(src="/i18n/login/en.js")
        script(src="/i18n/login/fr.js")
        link(rel='stylesheet' href='/css/ah-tm.tags.css')
        link(rel="stylesheet" href="/bower_components/angular-material/angular-material.min.css")
        script(src="/bower_components/angular/angular.min.js")
        script(src="/bower_components/angular-aria/angular-aria.js")
        script(src="/bower_components/angular-animate/angular-animate.min.js")
        script(src="/bower_components/angular-material/angular-material.js")
        script(src="/bower_components/angular-messages/angular-messages.js")
        script(src="/bower_components/angular-translate/angular-translate.min.js")
        script(src="/bower_components/angular-sanitize/angular-sanitize.min.js")

        script(src="/web-app/login.js")

        link(rel='stylesheet' href='/css/ah-tm.login.css')

    body(ng-app="login")
        div(style="border-top: 2px solid rgb(255, 195, 15);" class="user-home-wrap" ng-controller="LoginCtrl")
        img(src="/images/login_page_logo.png" alt="Aerohive" class="ah-logo")
        div.page-footer
            span(style="border: none;") Â© 2016 Aerohive Networks. All Rights Reserved.


        div(layout="column" layout-align="center center" layout-gt-sm="row" layout-align-gt-sm="center start")

            div(style="width: 450px;"  layout-margin)
                div.inside(md-whiteframe="5" style="width: 100%")
                    md-toolbar
                        div.md-toolbar-tools
                            h2(translate="OAUTH.TITLE")
                    md-content(layout="column")
                        form(id="OAuth" action="https://cloud.aerohive.com/thirdpartylogin" method="get")
                            input(type="hidden" name="client_id" value= client_id)
                            input(type="hidden" name="redirect_uri" value= redirect_uri)
                            div(style="margin: 30px;text-align: left;")
                                span(translate="OAUTH.TEXT1")
                            div(style="margin: 30px;text-align: left;")
                                span(translate="OAUTH.TEXT2")
                                span=" "
                                a.link(href="https://en.wikipedia.org/wiki/OAuth" target="_blank" translate="OAUTH.WIKI")
                                span .
                            div(style="width: 100%; text-align: center;")
                                md-button.md-raised.md-primary(type="submit" translate="OAUTH.OAUTH_BUTTON" aria-label="connect OAuth")


            div(style="width: 450px;" layout-margin)
                    div.inside(md-whiteframe="5" style="width: 100%" )
                        md-tabs(md-dynamic-height md-border-bottom)
                            md-tab(label="Cloud")
                                md-toolbar
                                    div.md-toolbar-tools
                                        h2(translate="TOKEN.TITLE")
                                md-content(layout="column" layout-padding)
                                    md-input-container
                                        label(for="vpcUrlOl" translate="TOKEN.SERVER")
                                        md-select(id="vpcUrlOl" name="vpcUrl" ng-model="vpcUrl")
                                            each apiServer in apiServers
                                                md-option(value=apiServer)= apiServer
                                    form(id="ATOl" action="/" method="post")
                                        input(type="hidden" name="vpcUrl" value='{{vpcUrl}}')
                                        md-input-container.md-block.flex-gt-sm
                                            label(for="OwnerIDOl" translate="TOKEN.OWNERID")
                                            input(required="required" autocorrect="off" autocapitalize="none" id="ownerIDOl" name="ownerId" type="text")
                                        md-input-container.md-block.flex-gt-sm
                                            label(for="accessTokenOl" translate="TOKEN.TOKEN")
                                            input(required="required" id="accessTokenOl" name="accessToken" type="text")
                                        div(style="float: right")
                                            md-button.md-raised.md-primary(type="submit" translate="TOKEN.CONNECT" aria-label="connect Token")
                                    div
                                        span(translate="TOKEN.HOWTO")
                                        span=" "
                                        a.link(href="/howto/" target='_blank' translate="TOKEN.HERE")
                                        span .
                            md-tab(label="On Premise")
                                md-toolbar
                                    div.md-toolbar-tools
                                        h2(translate="ONPREMISE.TITLE")
                                md-content(layout="column" layout-padding)
                                    span(translate="ONPREMISE.WARNING")
                                    md-input-container(style="padding-bottom: 0;margin-bottom: 0;")
                                        md-checkbox(id="rejectUnauthorizedOp" name="rejectUnauthorized" ng-model="tlsOp" style="margin-bottom: 0;") {{'ONPREMISE.CERTIFICATE' | translate}}
                                    form(id="ATOp" action="/op" method="post")
                                        input(type="hidden" name="rejectUnauthorized" value='{{tlsOp}}')
                                        md-input-container.md-block.flex-gt-sm
                                            label(for="vpcUrlOp" translate="ONPREMISE.FQDN")
                                            input(required="required" autocorrect="off" autocapitalize="none" id="vpcUrlOp" name="vpcUrl" type="text")
                                        md-input-container.md-block.flex-gt-sm
                                            label(for="OwnerIDOp" translate="ONPREMISE.OWNERID")
                                            input(required="required" autocorrect="off" autocapitalize="none" id="ownerIDOp" name="ownerId" type="text")
                                        md-input-container.md-block.flex-gt-sm
                                            label(for="accessTokenOp" translate="ONPREMISE.TOKEN")
                                            input(required="required" id="accessTokenOp" name="accessToken" type="text")
                                        div(style="float: right")
                                            md-button.md-raised.md-primary(type="submit" translate="ONPREMISE.CONNECT" aria-label="Connect")
                                    div
                                        span(translate="ONPREMISE.HOWTO")
                                        span=" "
                                        a.link(href="/howto/" target='_blank' translate="ONPREMISE.HERE")
                                        span .
